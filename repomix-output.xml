        }
    }

    // Check proc entry content
    async checkProcContent(procPath, expectedContent) {
        try {
            const content = await fs.readFile(procPath, 'utf8');
            
            if (typeof expectedContent === 'string') {
                if (!content.includes(expectedContent)) {
