            return { success: true };
        }
    }

    // Check if proc entry exists and is readable
    async checkProcEntry(procPath, shouldBeReadable) {
        try {
            await fs.access(procPath, fs.constants.F_OK);
            
            if (shouldBeReadable) {
                await fs.access(procPath, fs.constants.R_OK);
