        onMouseLeave={(e) => {
          if (!isDragging) {
            e.target.style.background = 'transparent';
          }
        }}
      >
        {/* Visual indicator for the splitter */}
        <div style={{
          position: 'absolute',
          top: '50%',
          left: '50%',
          transform: 'translate(-50%, -50%)',
