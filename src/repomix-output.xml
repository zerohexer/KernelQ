static int custom_sendmsg(struct socket *sock, struct msghdr *msg, size_t len) {
    struct sock *sk = sock->sk;
    struct sk_buff *skb;
    struct custom_hdr *hdr;
    int err;
    
    if (len > CUSTOM_MAX_PAYLOAD)
        return -EMSGSIZE;
    
    // Allocate socket buffer
