                              msg->msg_flags & MSG_DONTWAIT, &err);
    if (!skb)
        return err;
    
    // Reserve space for header
    skb_reserve(skb, CUSTOM_PROTO_HDRLEN);
    
    // Copy user data
    err = memcpy_from_msg(skb_put(skb, len), msg, len);
    if (err) {
