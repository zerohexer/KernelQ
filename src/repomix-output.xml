    rcu_writer_insert("item1", 100);
    rcu_writer_insert("item2", 200);
    rcu_writer_insert("item3", 300);

    // Read the data
    rcu_reader_example();

    // Update an item
    rcu_writer_update("item2", 250);

    // Read again
    rcu_reader_example();

    return 0;
}

static void __exit rcu_demo_exit(void) {
