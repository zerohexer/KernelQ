#define VENDOR_ID 0x1234
#define DEVICE_ID 0x5678
#define DRIVER_NAME "example_pci"

// Device private data structure
struct example_pci_dev {
    struct pci_dev *pdev;
    void __iomem *mmio_base;
    int irq;

    // DMA coherent buffer
    void *dma_coherent;
    dma_addr_t dma_coherent_handle;

