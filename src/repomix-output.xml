    priv->pdev = pdev;
    pci_set_drvdata(pdev, priv);
    
    // Enable PCI device
    ret = pci_enable_device(pdev);
    if (ret) {
        dev_err(&pdev->dev, "Cannot enable PCI device\\n");
        return ret;
